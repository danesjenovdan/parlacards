<body> <!-- removeme -->

    <script>var data = <%- JSON.stringify(data); %></script>

    <!-- everything above here is part of the page and not part of the card -->
    <div class="card-container card-halfling <%= className %>">
        <div class="card-header">
            <div class="card-header-border"></div>
            <h1><%= data.name %></h1> <!-- this text is the only thing you touch in .card-header -->
        </div>
        <div class="card-content">

            <!--<div class="row">
                <div class="col-xs-12">
                    <span class="slab">Dokumenti: </span><a href="https://parlameter.si" target="_blank" class="document">pdf</a>
                </div>
            </div>-->

            <div class="row">
                <div class="col-xs-12">
                    <div class="greybox">
                        <div class="legend-container">
                            <div class="option za" data-option="for">
                                <div class="option-marker option-marker-za"></div>
                                <div class="option-text">
                                    <div class="option-number">
                                        <%= data.all.for.total_votes %>
                                    </div>
                                    <div class="option-option">
                                        ZA
                                    </div>
                                </div>
                            </div>

                            <div class="option proti" data-option="against">
                                <div class="option-marker option-marker-proti"></div>
                                <div class="option-text">
                                    <div class="option-number">
                                        <%= data.all.against.total_votes %>
                                    </div>
                                    <div class="option-option">
                                        PROTI
                                    </div>
                                </div>
                            </div>

                            <div class="option vzdrzani" data-option="kvorum">
                                <div class="option-marker option-marker-vzdrzani"></div>
                                <div class="option-text">
                                    <div class="option-number">
                                        <%= data.all.kvorum.total_votes %>
                                    </div>
                                    <div class="option-option">
                                        VZDRÅ½ANI
                                    </div>
                                </div>
                            </div>

                            <div class="option niso" data-option="not_present">
                                <div class="option-marker option-marker-niso"></div>
                                <div class="option-text">
                                    <div class="option-number">
                                        <%= data.all.not_present.total_votes %>
                                    </div>
                                    <div class="option-option">
                                        NISO
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="right-container">
                            <div class="status-container">
                                <span class="slab">Status predloga: </span><div class="status"><span class="status-text"><% if (data.result) { %> SPREJET <% } else { %> ZAVRNJEN <% } %></span><i class="status-icon glyphicon <% if (data.result) { %> glyphicon-ok <% } else { %> glyphicon-remove <% } %>"></i></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="hidden-xs col-sm-6">
                    <div class="layeredchart"></div>
                </div>
                <div class="col-xs-12 col-sm-6">
                    <div class="people-ballots">
                        <%
                        var second_level_data = [];
                        for (option in data.all) {
                            for (party in data.all[option]['breakdown']) {

                                var newdict = data.all[option]['breakdown'][party];
                                newdict.option = option;

                                second_level_data.push(newdict);

                            }
                        }
                        %>
                        <script>var trajlala = <%- JSON.stringify(second_level_data); %>;</script>
                        <% for (group in second_level_data) { %>
                            <div class="mpgroup <%= second_level_data[group]['option']%> <%= second_level_data[group]['pg']['acronym'].replace(' ', '_') %>">
                                <% for (mp in second_level_data[group]['mps']) { %>
                                    <div class="member">
                                        <div class="metadata">
                                            <div class="image" style="background-image: url(https://cdn.parlameter.si/v1/parlassets/img/people/square/<%= second_level_data[group]['mps'][mp]['gov_id'] %>.png); background-size: cover;"></div>
                                            <p><%= second_level_data[group]['mps'][mp]['name'] %>
                                                <br/><%= second_level_data[group]['mps'][mp]['party']['acronym'] %></p>
                                            <div class="clearfix"></div>
                                        </div>
                                        <%
                                            var option;
                                            switch (second_level_data[group]['option']){
                                                case 'for':
                                                    option = 'za';
                                                    break;
                                                case 'against':
                                                    option = 'proti';
                                                    break;
                                                case 'abstain':
                                                    option = 'vzdrzan';
                                                    break;
                                                case 'not_present':
                                                    option = 'ni';
                                                    break;
                                            }
                                        %>
                                        <div class="vote-icon <%= option %>"></div>
                                    </div>
                                <% } %>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

        </div>
        <div class="card-footer">
                <div class="card-logo hidden">
                     <a href="https://skoraj.parlameter.si/">
                         <img src="https://cdn.parlameter.si/v1/parlassets/img/logo-parlameter.svg" alt="parlameter logo">
                     </a>
                 </div>

            <div class="card-circle-button card-share"></div>
            <div class="card-circle-button card-embed"></div>
            <div class="card-circle-button card-info">i</div>
        </div>
    </div>
    <!-- everything below here is part of the page and not part of the card -->

    <!-- your js file is compiled to this and later inlined (must begin with data-inline="true" )-->
    <!-- inline temp/js/script.js as <script> -->
    <script data-inline="true" src="js/script.js"></script>

</body> <!-- removeme -->

</html> <!-- removeme -->
