    <!-- everything above here is part of the page and not part of the card -->
    <div class="card-container <%= className %>">
        <div class="card-header">
            <div class="card-header-border"></div>
            <h1>Nastopi, v katerih je bil iskalni niz izrečen</h1> <!-- this text is the only thing you touch in .card-header -->
        </div>
        <div class="card-content full">
            <div class="card-content-front" id="nastopi-v-katerih-je-bil-iskalni-niz-izrecen">
                <div v-if="rawSpeeches.length === 0" class="no-results">Brez zadetkov.</div>
                <ul v-else class="person-list">
                    <li v-for="speech in speeches" class="person">
                        <template v-if="speech.person.type === 'mp'">
                            <a class="column portrait" :href="speech.memberUrl">
                                <img :src="speech.memberImageUrl" />
                            </a>
                            <div class="column name">
                                <a class="funblue-light-hover" :href="speech.memberUrl">{{ speech.person.name }}</a><br/>
                                <a class="funblue-light-hover" :href="speech.partyUrl">{{ speech.person.party.acronym }}</a>
                            </div>
                        </template>
                        <template v-else>
                            <div class="column portrait">
                              <img :src="speech.memberImageUrl" />
                            </div>
                            <div class="column name">
                              {{ speech.person.name }}<br/>
                              {{ speech.person.party.acronym }}
                            </div>
                        </template>

                        <div class="column date">{{ speech.formattedDate }}</div>
                        <div class="column quote">
                            <a class="funblue-light-hover" :href="speech.speechUrl">{{ speech.content_t }}</a>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="card-content-info hidden">
                <div class="card-back-content">
                    <div class="scroller" id="tvojamtka">
                        <p class="info-text">
                            Po transkriptih vseh sej poiščemo in izpišemo povezave do vseh govorov, v katerih se pojavi lema iskanega niza, nato jih razvrstimo po datumu od najnovejše do najstarejše. Zajeto množico poslancev določajo uporabniške nastavitve filtrov, in sicer glede na časovno obdboje, poslanca/-ko in/ali poslansko skupino in/ali sejo.
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-content-embed hidden">
                <div class="card-back-content">
                    <div class="embed-content">
                        <div class="embed-divider"></div>
                        <div class="embed-switch-container">
                            <div class="embed-label">Podatki naj se vedno osvežujejo</div>
                            <div class="embed-switch-big-box">
                                <div class="embed-switch-box">
                                    <div class="embed-switch">
                                        <div class="embed-switches">
                                            <div class="leftswitch">
                                                DA
                                            </div>
                                            <div class="rightswitch">
                                                NE
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="embed-switch-ball"></div>
                            </div>
                        </div>
                        <div class="embed-divider"></div>
                        <div class="embed-script">
                            <textarea class="form-control" data-id="<%= 0 %>" data-url="https://glej.parlameter.si/<%= cardData.group %>/<%= cardData.method %>/"><script>(function(d,script){script=d.createElement('script');script.type='text/javascript';script.async=true;script.onload=function(){iFrameResize({log:true,checkOrigin:false})};script.src = 'https://cdn.parlameter.si/v1/parlassets/js/iframeResizer.min.js';d.getElementsByTagName('head')[0].appendChild(script);}(document));</script><iframe frameborder="0" width="100%" src="https://glej.parlameter.si/<%= cardData.group %>/<%= cardData.method %>/?customUrl=<%= encodeURIComponent(customUrl) %>&embed=true"></textarea>
                            <button class="btn-parlameter btn-full-width btn-blue btn-copy-embed">KOPIRAJ</button>
                        </div>
                        <div class="embed-divider"></div>
                        <div class="embed-export">
                            <div class="embed-label">Izvozi kartico kot sliko <button class="btn-parlameter btn-blue btn-margin-left">PRENESI</button></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-content-share hidden">
                <div class="card-back-content">
                    <div class="share-content">
                        <label for="share-url">Neposredna povezava do kartice</label>
                        <input type="url" class="form-control share-url" id="share-url" value="https://glej.parlameter.si/<%= cardData.group %>/<%= cardData.method %>/?customUrl=<%= encodeURIComponent(customUrl) %>&frame=true"/>
                        <button class="btn-parlameter btn-full-width btn-blue">KOPIRAJ</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="card-logo hidden">
                 <a href="https://skoraj.parlameter.si/">
                     <img src="https://cdn.parlameter.si/v1/parlassets/img/logo-parlameter.svg" alt="parlameter logo">
                 </a>
             </div>

            <div class="card-circle-button card-share" data-back="share"></div>
            <div class="card-circle-button card-embed" data-back="embed"></div>
            <div class="card-circle-button card-info" data-back="info">i</div>
        </div>
