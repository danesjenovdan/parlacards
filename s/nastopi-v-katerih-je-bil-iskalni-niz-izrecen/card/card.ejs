<body> <!-- removeme -->


    <!-- everything above here is part of the page and not part of the card -->
    <div class="card-container card-halfling">
        <div class="card-header">
            <div class="card-header-border"></div>
            <h1>Nastopi, v katerih je bil iskalni niz izreƒçen</h1> <!-- this text is the only thing you touch in .card-header -->
        </div>
        <div class="card-content card-nastopi">
          <%
              function makeId() {
                  var text = "";
                  var possible = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";

                  for(var i = 0; i < 5; i++) {
                      text += possible.charAt(Math.floor(Math.random() * possible.length));
                  }

                  return text;
              }

              function formatDate(unformattedDate) {
                var date = new Date(unformattedDate);
                return date.getDate() + ". " + (date.getMonth() + 1) + ". " + date.getFullYear()
              }

              var PAGE_SIZE = 5;
              var randomId = makeId();
              var paginationNeeded = data.highlighting.length > PAGE_SIZE;
              var resultPages = [];
              var pageCount = Math.ceil(data.highlighting.length / PAGE_SIZE);

              for (var i = 0; i < pageCount; i++) {
                resultPages.push(data.highlighting.slice(i * PAGE_SIZE, (i + 1) * PAGE_SIZE));
              }
          %>

          <div  id="votingCard">

              <div id="scrollbar-voting-card" class="scroller">

                  <div class="tab-content">
                      <% resultPages.forEach(function(resultPage, index) { %>
                          <% if (paginationNeeded) { %>
                          <div role="tabpanel" class="tab-pane<%= index === 0 ? ' active' : '' %>" id="<%= randomId %>_<%= index %>">
                          <% } %>

                          <% resultPage.forEach(function(result, index) { %>
                          <div class="member">
                              <div class="metadata">
                                  <div class="image" style="background-image: url(https://cdn.parlameter.si/v1/img/people/<%= result.person.gov_id %>.png); background-size: cover;"></div>
                                  <p class="name">
                                      <%= result.person.name %><br/>
                                      <%= result.person.party.acronym %>
                                      </p>
                                  <p class="date"><%= formatDate(result.date) %></p>
                              </div>
                              <div class="quote"><%- result.content_t %></div>
                          </div>
                          <% }) %>

                          <% if (paginationNeeded) { %>
                          </div>
                          <% } %>
                      <% }) %>
                  </div>

                  <% if (paginationNeeded) { %>
                  <nav class="pagination-container" aria-label="Page navigation">
                      <ul class="pagination" role="tablist">
                          <li class="arrow">
                              <a href="#" aria-label="Previous" data-move-pagination="prev">
                                  <span aria-hidden="true"></span>
                              </a>
                          </li>

                          <% for (var i = 0; i < pageCount; i++) { %>
                              <li role="presentation" class="<%= i === 0 ? 'active' : '' %>">
                                  <a href="#<%= randomId %>_<%= i %>" aria-controls="i" role="tab" data-toggle="tab"><%= i + 1 %></a>
                              </li>
                          <% } %>

                          <li class="arrow">
                              <a href="#" aria-label="Next" data-move-pagination="next">
                                  <span aria-hidden="true"></span>
                              </a>
                          </li>
                      </ul>
                  </nav>
                  <% } %>

              </div>

          </div>

        </div>
        <div class="card-footer">
            <div class="card-circle-button card-share"></div>
            <div class="card-circle-button card-embed"></div>
            <div class="card-circle-button card-info">i</div>
        </div>
    </div>
