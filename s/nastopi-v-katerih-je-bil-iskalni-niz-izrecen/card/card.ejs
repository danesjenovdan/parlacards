</head> <!-- removeme -->

<body> <!-- removeme -->


    <!-- everything above here is part of the page and not part of the card -->
    <div class="card-container <%= className %>">
        <div class="card-header">
            <div class="card-header-border"></div>
            <h1>Zadnji nastopi, v katerih je bil iskalni niz izreƒçen</h1> <!-- this text is the only thing you touch in .card-header -->
        </div>
        <div class="card-content full">
            <div class="card-content-front">
                <% if (data.response.numFound === 0) { %>
                    <b style="text-align: center; display: block; margin-top: 200px;"><i>Brez zadetkov.</i></b>
                <% } else { %>
                    <% function formatDate(unformattedDate) {
                    var date = new Date(unformattedDate);
                    return date.getDate() + ". " + (date.getMonth() + 1) + ". " + date.getFullYear()
                    } %>

                    <ul class="person-list">
                        <% data.highlighting.forEach(function(result, index) { %>
                        <li class="person">
                            <a class="column portrait" href="/p/id/<%= result.person.id %>">
                            <img src="https://cdn.parlameter.si/v1/parlassets/img/people/square/<%= String(result.person.gov_id) %>.png" />
                            </a>
                            <div class="column name">
                            <a class="funblue-light-hover" style="color: #6d6d6d;" href="/p/id/<%= result.person.id %>"><%= result.person.name %></a><br/>
                            <a class="funblue-light-hover" style="color: #6d6d6d;" href="/ps/id/<%= result.person.party.id %>">
                                <%= result.person.party.acronym %>
                            </a>
                            </div>
                            <div class="column date"><%= formatDate(result.date) %></div>
                            <div class="column quote"><a class="funblue-light-hover" href="https://skoraj.parlameter.si/seja/transkript/<%= result.session_id %>#!<%= result.speech_id %>" style="color: #6d6d6d;"><%- result.content_t %></a></div>
                        </li>
                        <% }) %>
                    </ul>
                <% } %>
            </div>
        </div>
        <div class="card-footer">
                <div class="card-logo hidden">
                     <a href="https://skoraj.parlameter.si/">
                         <img src="https://cdn.parlameter.si/v1/parlassets/img/logo-parlameter.svg" alt="parlameter logo">
                     </a>
                 </div>

            <div class="card-circle-button card-share"></div>
            <div class="card-circle-button card-embed"></div>
            <div class="card-circle-button card-info">i</div>
        </div>
    </div>
    <!-- everything below here is part of the page and not part of the card -->

    <!-- your js file is compiled to this and later inlined (must begin with data-inline="true" )-->
    <!-- inline temp/js/script.js as <script> -->
    <script data-inline="true" src="js/script.js"></script>

</body> <!-- removeme -->

