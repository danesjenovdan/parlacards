    <!-- everything above here is part of the page and not part of the card -->
    <div class="card-container card-halfling <%= className %>">
        <div class="card-header">
            <div class="card-header-border"></div>
            <h1>Besede, ki jo delajo posebno</h1>
            <!-- this text is the only thing you touch in .card-header -->
        </div>
        <div class="card-content">
            <div class="bgwhite poslanec">

                <%

                var max = 0;
                var min = 100;

                for (var i = 0; i < data.results.length; i++) {
                    var word = data.results[i];
                    if (Math.round(word.tfidf * 5000) > max) {
                        max = Math.round(word.tfidf * 5000);
                    } else if (+word.tfidf < min) {
                        min = Math.round(word.tfidf * 5000);
                    }
                }

                var diff = max - min;

                var offset = 120;

                for (var i=0; i < data.results.length; i++) {
                        var word = data.results[i];
                        word.score = Math.round(word.tfidf * 5000);
                %>

                <div class="me_poslanec clearfix tfidf-bar">

                    <div class="term">
                        <span class="poslanec_title">
                                        <%= word.term %>
                                    </span>
                    </div>
                    <div class="frequency">
                        <div class="progress hugebar2 avgmin">
                            <div class="progress-bar funblue" role="progressbar" aria-valuenow="<%= word.score %>" aria-valuemin="<%= min %>" aria-valuemax="<%= max %>" style="width: <%= (word.score) / max * 100 - 20 %>%;">
                                <span class="sr-only"><%= word.score %></span>
                            </div>
                            <div class="progress_number">
                                <%= word.score %>
                            </div>

                        </div>
                    </div>
                </div>

                <%
                    }
                %>



            </div>
            <!-- delete this placeholder, this is the content of your card -->
        </div>
