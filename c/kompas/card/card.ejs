<body> <!-- removeme -->

    <%

        function getParties(data) {

            var parties = [];

            for (person_i in data) {
                if (parties.indexOf(data[person_i].person.party.acronym) === -1) {
                    parties.push(data[person_i].person.party.acronym);
                }
            }

            return parties;
        }

        var parties = getParties(data);

    %>

    <!-- everything above here is part of the page and not part of the card -->
    <div class="card-container card-halfling">
        <div class="card-header">
            <div class="card-header-border"></div>
            <h1>Politični kompas</h1>
            <!-- this text is the only thing you touch in .card-header -->
        </div>
        <div class="card-content">
            <div class="row">
                <div class="col-xs-4 col-sm-4 col-md-1">
                    <div class="kompas-search">
                        <%
                            var searchpeople = [];

                            var kompas_data = data;

                            for (person_i in kompas_data) {
                                searchpeople.push({'label': kompas_data[person_i]['person']['name'], 'value': kompas_data[person_i]['person']['id']});
                            }
                        %>
                        <script>var searchpeople = <%- JSON.stringify(searchpeople) %>;</script>
                        <input type="text" class="kompas-search" />
                    </div>
                </div>
                <div class="col-xs-8 col-sm-8 col-md-11">
                    <div class="kompas-people">
                        <div class="kompas-people-wide">
                        <% for (person_i in data) { %>
                            <div class="kompas-person hidden noselect" id="personcard<%= data[person_i]['person']['id'] %>" data-id="<%= data[person_i]['person']['id'] %>" data-acronym="<%= data[person_i]['person']['party']['acronym'] %>">

                                <div class="kompas-person-party">
                                    <%= data[person_i]['person']['party']['acronym'] %>
                                </div>
                                <div class="kompas-person-internal-container">
                                    <div class="kompas-person-image" style="background-image: url(https://cdn.parlameter.si/v1/img/people/<%= data[person_i]['person']['gov_id'] %>.png)"></div>
                                    <div class="kompas-person-name">
                                        <%= data[person_i]['person']['name'] %>
                                    </div>
                                </div>
                                <div class="kompas-person-close">
                                    ×
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-2">
                    <div class="kompas-stranke">
                        <% for (party_i in parties) {
                        %>
                            <div data-acronym="<%= parties[party_i].replace(' ', '_') %>" class="noselect kompas-stranka <%= parties[party_i].replace(' ', '_') %>" id="partyswitch-<%= parties[party_i].replace(' ', '_') %>">
                                <%= parties[party_i] %>
                                <br />
                                <i class="glyphicon glyphicon-ok"></i>
                            </div>
                        <%
                        }
                        %>
                    </div>
                </div>
                <div class="col-xs-10">
                    <div id="kompas-scatter"></div>
                </div>
            </div>
            <!-- delete this placeholder, this is the content of your card -->
        </div>
        <div class="card-footer">
            <div class="card-circle-button card-share"></div>
            <div class="card-circle-button card-embed"></div>
            <div class="card-circle-button card-info">i</div>
        </div>
    </div>
    <!-- everything below here is part of the page and not part of the card -->

    <!-- your js file is compiled to this and later inlined (must begin with data-inline="true" )-->
    <!-- inline temp/js/script.js as <script> -->
    <script data-inline="true" src="js/script.js"></script>

